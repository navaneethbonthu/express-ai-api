// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  USER
  ADMIN
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[] // One category can have many products
  createdAt DateTime  @default(now())
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt



  // Relationships
  products  Product[] // Products created/owned by this user
  orders    Order[]   // Orders placed by this user (the buyer)
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  description String?
  
  // Ownership Relationship
  userId      String   // The ID of the user who created/owns this product
  user        User     @relation(fields: [userId], references: [id])


    // Link to Category
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

   imageUrl    String?  // Add this field (Optional)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Sales Relationship
  orders      Order[]  // Times this product has been ordered
}

model Order {
  id          String   @id @default(cuid())
  userId      String   // The Buyer
  productId   String   // The Product bought
  quantity    Int
  totalPrice  Float
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}